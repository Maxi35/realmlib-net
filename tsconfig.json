{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "incremental": true,
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "lib"
  ]
}
